<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camping.Restauracao">

    <TextView
        android:id="@+id/restauracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="70dp"
        android:text="Restauração"
        android:textColor="#000000"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/telepizza"
        android:layout_width="120dp"
        android:layout_height="139dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restauracao"
        app:srcCompat="@drawable/telepizza" />

    <ImageView
        android:id="@+id/continente"
        android:layout_width="214dp"
        android:layout_height="132dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toEndOf="@+id/telepizza"
        app:layout_constraintTop_toBottomOf="@+id/restauracao"
        app:srcCompat="@drawable/continente" />

    <TextView
        android:id="@+id/bancasoficiais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="78dp"
        android:text="Sponsors oficiais presentes:"
        android:textSize="27dp"
        app:layout_constraintBottom_toTopOf="@+id/telepizza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ucal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/redbull"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ucal" />

    <ImageView
        android:id="@+id/redbull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ucal"
        app:srcCompat="@drawable/redbull" />
</androidx.constraintlayout.widget.ConstraintLayout>